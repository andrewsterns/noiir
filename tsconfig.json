{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@noiir/frame-core": ["__frame-core__"],
      "@noiir/frame-core/*": ["__frame-core__/*"],
      "@variants/*": ["__variants__/*"],
      "@components/*": ["__components__/*"],
      "@theme/*": ["__variants__/theme/*"]
    },
  },
  "include": [
    "__components__/**/*",
    "__variants__/**/*",
    "__frame-core__/**/*",
    "__stories__/**/*"
, "dist/src/theme/icons"  ],
  "exclude": [
    "node_modules",
    "dist",
    "examples"
  ]
}