{
  "name": "noiir",
  "version": "1.0.0",
  "type": "module",
  "description": "A React component framework that mirrors Figma design properties with Frame-based components",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./frame": {
      "import": "./dist/frame.js",
      "types": "./dist/frame.d.ts"
    },
    "./theme": {
      "import": "./dist/theme.js",
      "types": "./dist/theme.d.ts"
    },
    "./components": {
      "import": "./dist/components.js",
      "types": "./dist/components.d.ts"
    },
    "./variants": {
      "import": "./dist/variants.js",
      "types": "./dist/variants.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:clean && npm run build:tsc",
    "build:clean": "rimraf dist",
    "build:tsc": "tsc",
    "dev": "tsc --watch",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build:noiir": "node scripts/compile-noiir.js",
    "watch:noiir": "cross-env chokidar \"src/**/*.noiir\" -c \"npm run build:noiir\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "figma",
    "design-system",
    "components"
  ],
  "author": "Your Name",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.5.3",
    "@storybook/addon-interactions": "^7.6.20",
    "@storybook/addon-links": "^7.6.20",
    "@storybook/react": "^7.5.3",
    "@storybook/react-vite": "^7.5.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "chokidar-cli": "^3.0.0",
    "cross-env": "^10.1.0",
    "glob": "^11.0.0",
    "storybook": "^7.5.3",
    "typescript": "^5.0.0",
    "vite": "^4.4.5"
  }
}